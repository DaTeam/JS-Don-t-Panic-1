{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "esnext",
        "outDir": "./dist",
        "baseUrl": "./src",
        "resolveJsonModule": true,
        "allowJs": true,
        "strict": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": false,
        "strictPropertyInitialization": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": false
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js"        
    ],
    "exclude": [
        "node_modules"
    ]
}